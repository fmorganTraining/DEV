    <aura:token name="iconDeepRed" value="#951F2E"/>
    
    <!-- Buttons -->
    <aura:token name="defaultButtonColor" value="#24B200"/>
    <aura:token name="hoverButtonColor" value="#4F972B"/>
    <aura:token name="ctaButtonColor" value="#F07418"/>
    <aura:token name="disabledButtonColor" value="#E9EBED"/>
    
    <!-- Links -->
    <aura:token name="linkColor" value="rgb(0, 112, 210)"/>
    
    <!-- Typography -->
    <aura:token name="textOnColor" value="white"/>
    <aura:token name="disabledButtonTextColor" value="#9B9B9B"/>
    <aura:token name="bodyTextColor" value="#4A4A4A"/>
    
    <!--
	******************************
	********* TYPOGRAPHY *********
	******************************
	-->
    
    <!-- Text Sizes -->
    <aura:token name="h1HeadlineText" value="4rem"/>
    <aura:token name="x5LargeText" value="3rem"/>
    <aura:token name="x4LargeText" value="2.5rem"/>
    <aura:token name="x3LargeText" value="2rem"/>
    <aura:token name="x2LargeText" value="1.5rem"/>
    <aura:token name="xLargeText" value="1.25rem"/>
    <aura:token name="largeText" value="1.125rem"/>
    <aura:token name="mediumText" value="1rem"/>
    <aura:token name="smallText" value=".875rem"/>
    <aura:token name="xSmallText" value=".75rem"/>
    <aura:token name="xxSmallText" value=".625rem"/>
    
    <!-- Font Families -->
    <aura:token name="iccuFont" value="'proxima-nova','Salesforce Sans',Arial,sans-serif"/>
    <aura:token name="fontAwesome" value="'Font Awesome 5 Solid'"/>
    <aura:token name="fontAwesomeOutline" value="'Font Awesome 5 Regular'"/>
    
