<aura:tokens extends="force:base">
    
    <!-- <aura:token name="" value="" /> -->
    <!-- 
		Tokens that we need:
			• Colors
			• Font Sizes
			• Spacing
  	-->
    
    
    <!-- CUSTOM ICCU STYLING BELOW -->
    <aura:token name="greyBackgroundColor" value="#F2F2F2"/>
    <aura:token name="iccuHeaderBackground" value="#1C8900"/>
    <aura:token name="iccuLightText" value="white" />
    <aura:token name="iccuDarkGreen" value="#006C18" />
    
    <aura:token name="iccuPill" value="5px"/>
    <aura:token name="iccuRounded" value="10px"/>
    
    <aura:token name="iccuFlex" value="flex"/>
    <aura:token name="iccuSpaceBetween" value="space-between"/>
    
    <!--
	******************************
	*********** COLORS ***********
	******************************
	-->
    
    <!-- Primary Colors -->
    <aura:token name="iccuPrimaryGreen" value="#1C8900"/>
    <aura:token name="iccuBrandGreen" value="#1C8900"/>
    <aura:token name="iccuSecondaryGreen" value="#006C18"/>
    <aura:token name="brightAccentGreen" value="#B1FF00"/>
    <aura:token name="iccuDarkHover" value="#005413"/>
    
    <!-- Complimentary and Background Colors -->
    <aura:token name="lightestGray" value="#F2F2F2"/>
    <aura:token name="mediumGray" value="#7D7D7D"/>
    <aura:token name="darkGray" value="#555759"/>
    <aura:token name="darkestGray" value="#4A4A4A"/>
    
    <!-- State Colors -->
    <aura:token name="iccuSuccess" value="#24b200"/>
    <aura:token name="iccuNotification" value="#4a90e2"/>
    <aura:token name="iccuError" value="#eb3d3d"/>
    <aura:token name="iccuWarning" value="#f6c951"/>
    
    <!-- Icon Colors -->
    <aura:token name="iconYellow" value="#FFC107"/>
    <aura:token name="iconPurple" value="#9C27B0"/>
    <aura:token name="iconBlue" value="#00BCD4"/>
    <aura:token name="iconRed" value="#FF1C0B"/>
